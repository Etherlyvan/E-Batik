// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Batik {
  id        Int       @id @default(autoincrement())
  kode      String?
  nama      String
  tahun     String
  warna     String
  teknik    String
  jenisKain String
  pewarna   String
  bentuk    String
  histori   String
  dimensi   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  foto      Foto[]
  tema      Tema[]    @relation("BatikTema")
  subTema   SubTema[] @relation("BatikSubTema")
}

model Foto {
  id      Int    @id @default(autoincrement())
  link    String
  batikId Int
  batik   Batik  @relation(fields: [batikId], references: [id])
}

model Tema {
  id        Int       @id @default(autoincrement())
  nama      String    @unique
  subTema   SubTema[]
  batiks    Batik[]   @relation("BatikTema")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model SubTema {
  id        Int      @id @default(autoincrement())
  nama      String   @unique
  temaId    Int
  tema      Tema     @relation(fields: [temaId], references: [id])
  batiks    Batik[]  @relation("BatikSubTema")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([nama, temaId])
}
